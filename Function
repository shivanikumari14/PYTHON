#WAF to print the length of a list(list is the parameter)
cities = ["delhi", "gurgaon", "noida", "pune","mumbai"]
heros = ["thor", "ironman", "captain", "loki"]

def print_len(list):
    print(len(list))

print_len(cities)
print_len(heros)


#WAF to print the elements of a list in a single line(list is the parameter)
cities = ["delhi", "gurgaon", "noida", "pune","mumbai"]


def print_len(list):
    for item in list:
        print(item , end= " ")    

print_len(cities)

# WAF to find the factorial of n(n is the parameter)
def cal_fact(n):
    fact = 1
    for i in range(1, n+1):
        fact *= i
    print(fact)

cal_fact(5)


# WAF to convert USD to INR
def converter(usd_val):
    inr_val = usd_val * 83
    print(usd_val, "USD=", inr_val,"INR")
converter(100)

# WAF to find ODD and EVEN of n
def cal_fun(n):
    if n%2 == 0:
        print("EVEN")
    else:
        print("ODD")
cal_fun(3)

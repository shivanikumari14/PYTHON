# print from 5 to 1 using recursion
 def show(n):
     if(n == 0): # base case(stopping condition in recursion)
          return 
     print(n)
     show(n-1)
show(5)


# find factorial using recursion
 def fact(n):
        if(n == 1 or n == 0):
         return 1
        return fact(n-1) * n 
 print(fact(3))

# wite a recursive function to calculate the sum of first n natural numbers.
def calc_sum(n):
    if(n == 0):
        return 0
    return calc_sum(n-1) + n
print(calc_sum(5))
